<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_1"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_video_index"
        android:layout_width="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tv_video_thumbnail"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:padding="1dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/baseline_video_24"
        app:shapeAppearanceOverlay="@style/roundCornerImageStyle" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="视频名称"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_video_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                android:text="mp4"
                android:background="@drawable/txt_bg"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/tv_video_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="路径"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/tv_video_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="10sp"
                android:text="0MB" />

            <TextView
                android:id="@+id/tv_video_resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:text="1920x1080" />

            <TextView
                android:id="@+id/tv_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:text="时间"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>